{% capture footer_contents %}
  <div class="footer-main">
    <div class="footer-left">
      <div class="footer-copyright">
        &copy; Copyright {{ site.time | date: '%Y' }} <strong>FRACTALS</strong> Research Group
      </div>
      <div class="footer-contact">
        <i class="fas fa-envelope"></i> <a href="mailto:fractals@unive.it">fractals@unive.it</a>
      </div>
    </div>
    
    <div class="footer-right">
      <div class="footer-hub">Venice &middot; Milan &middot; Bergamo</div>
      {% if site.last_updated %}
        <div class="last-updated">Updated: {{ 'now' | date: '%B %d, %Y' }}</div>
      {% endif %}
    </div>
  </div>
{% endcapture %}

{% if site.footer_fixed %}
  <footer class="fixed-bottom" role="contentinfo">
    <div class="container mt-0">
      {{ footer_contents }}
    </div>
  </footer>
{% else %}
  <footer class="sticky-bottom mt-5" role="contentinfo">
    <div class="container">
      {{ footer_contents }}
    </div>
  </footer>
{% endif %}

<style>
  .footer-main {
    display: flex;
    justify-content: space-between;
    align-items: flex-end; /* Aligns items to the bottom */
    flex-wrap: wrap;
    gap: 15px;
    padding: 20px 0;
    border-top: 1px solid var(--global-divider-color);
  }
  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 5px;
  }
  .footer-copyright {
    font-size: 0.95rem;
  }
  .footer-contact {
    font-size: 0.9rem;
    opacity: 0.8;
  }
  .footer-contact a {
    color: var(--global-text-color) !important;
    text-decoration: none;
    transition: 0.3s;
  }
  .footer-contact a:hover {
    color: var(--global-theme-color) !important;
  }
  .footer-hub {
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--global-theme-color);
    font-size: 0.8rem;
  }
  .last-updated {
    font-size: 0.75rem;
    opacity: 0.4; /* Very subtle since it's not vital */
    font-style: italic;
  }
  
  @media (max-width: 768px) {
    .footer-main {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }
    .footer-right {
      align-items: center;
    }
  }
</style>